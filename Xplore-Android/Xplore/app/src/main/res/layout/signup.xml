<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:src="@drawable/icon"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_email"
        android:editable="true"
        android:hint="E-mail"
        android:layout_below="@+id/icon"
        android:layout_alignStart="@+id/icon"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignEnd="@+id/icon"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signup_name"
        android:hint="Name"
        android:layout_below="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_toStartOf="@+id/signup_login"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signup_surname"
        android:hint="Surname"
        android:layout_below="@+id/signup_name"
        android:layout_alignStart="@+id/signup_name"
        android:layout_alignEnd="@+id/signup_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_pass"
        android:hint="Password"
        android:layout_below="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_alignStart="@+id/signup_pass_retype"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_pass_retype"
        android:hint="Retype Password"
        android:layout_alignTop="@+id/signup_surname"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_toEndOf="@+id/signup_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:id="@+id/signupBtn"
        android:layout_below="@+id/signup_pass"
        android:layout_alignEnd="@+id/guestLogin"
        android:layout_alignStart="@+id/guestLogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/signup_login"
        android:clickable="true"
        android:layout_below="@+id/signupBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue As a Guest"
        android:id="@+id/guestLogin"
        android:clickable="true"
        android:layout_below="@+id/signup_login"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"/>


</RelativeLayout>
