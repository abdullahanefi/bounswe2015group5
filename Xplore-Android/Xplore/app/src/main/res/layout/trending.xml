<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tagBtnUL"
            android:textColor="@color/tab_btn_text"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/big_button_shape"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tagBtnUR"
            android:textColor="@color/tab_btn_text"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/big_button_shape"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tagCenterLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_btn_text"
            android:text="Connecting the Dots"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tagCenterLoadingView"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/tagCenterLoadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:indicator="BallZigZag"
            app:indicator_color="@color/tab_btn_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tagBtnCenter"
            android:textColor="@color/tab_btn_text"
            android:textSize="12sp"
            android:visibility="invisible"
            android:background="@drawable/big_button_shape"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tagBtnDL"
            android:textColor="@color/tab_btn_text"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/big_button_shape"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tagBtnDR"
            android:textColor="@color/tab_btn_text"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/big_button_shape"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

